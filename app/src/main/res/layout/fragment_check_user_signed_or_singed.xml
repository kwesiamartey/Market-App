<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.CheckUserSignedOrSingedFragment">

    <LinearLayout
        android:id="@+id/credential_checker_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text=""
            android:layout_margin="12dp"
            android:textColor="@color/deep_grey"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/signup_dash"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:padding="6dp"
                android:background="@drawable/full_curved_corner_button_with_no_background_color"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/purple_200"
                android:textSize="16sp"
                android:text="Register"/>

            <TextView
                android:id="@+id/login_dash"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="6dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/purple_200"
                android:textSize="16sp"
                android:background="@drawable/full_curved_corner_button_with_no_background_color"
                android:text="Sign in" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>