<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".ui.SignInFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/single_selected_toolnar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Password update"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:drawableTint="@color/black"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_weight = "1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"/>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="18dp"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/avater"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/full_curved_corner_button"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_update"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/wrapper1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/full_curved_corner_button"
            android:elevation="1dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/current_passsword_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="12dp"
                android:textColor="@color/textColor"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular"
                android:backgroundTint="@color/lighter_mauve"
                android:hint="Current password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:id="@+id/c_eye"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:text="Show"
                android:textColor="@color/textColor"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:drawablePadding="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wrapper2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/full_curved_corner_button"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_password_txt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="@color/lighter_mauve"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="New password"
                android:textColor="@color/textColor"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/n_eye"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:text="Show"
                android:textColor="@color/textColor"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:drawablePadding="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wrapper3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/full_curved_corner_button"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/retype_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/lighter_mauve"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="12dp"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/poppins_regular"
                android:hint="Re-type password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:id="@+id/r_eye"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:text="Show"
                android:textColor="@color/textColor"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:drawablePadding="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:elevation="1dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/full_curved_corner_button_with_no_background_color"
                app:backgroundTint="@color/background_color"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="19sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar_updating_user"
            android:background="@drawable/progress"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />




    </LinearLayout>

</LinearLayout>