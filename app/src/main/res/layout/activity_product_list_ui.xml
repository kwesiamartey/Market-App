<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.lornamobileappsdev.my_marketplace.ui.FeaturedSliderFragment"
        android:id="@+id/featuredSlider"/>

    <LinearLayout
        android:id="@+id/stayingSafe"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/background_color"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|bottom"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/avatarr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stay_safe"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/view_all_category_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="end"
            android:text="Explore Popular Categories"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawableTint="@color/black"
            android:drawablePadding="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="5"
            android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/real_estate"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/full_curved_corner_button"
                        android:padding="19dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/real_estate" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_ware"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/full_curved_corner_button"
                        android:padding="23dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_ware" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/accessories"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/full_curved_corner_button"
                        android:padding="18dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/accessories" />

                </LinearLayout>

            </LinearLayout>

            <!--menu text name -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#C8C49D"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Real Esate"
                        android:textColor="@color/textColor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#C0EFEB"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="HomeWare"
                        android:textColor="@color/textColor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#ADB8F8"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Accessories"
                        android:textColor="@color/textColor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/wrist_watch"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/full_curved_corner_button"
                        android:padding="19dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wrist_watches" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fishing"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/full_curved_corner_button"
                        android:padding="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fishing" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sneakers"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/full_curved_corner_button"
                        android:padding="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sneakers" />

                </LinearLayout>

            </LinearLayout>

            <!--menu text name -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#C8C49D"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Wristwatches"
                        android:textColor="@color/textColor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#C0EFEB"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Fishing"
                        android:textColor="@color/textColor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#ADB8F8"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Sneakers"
                        android:textColor="@color/textColor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        </GridLayout>

    </LinearLayout>


    <fragment
        android:id="@+id/news_frg"
        android:name="com.lornamobileappsdev.my_marketplace.ui.NewsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <fragment
        android:id="@+id/recentlyViewed"
        android:layout_marginTop="24dp"
        android:name="com.lornamobileappsdev.my_marketplace.ui.InnerRecentlyViewdProducts"
        android:layout_width="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:elevation="1dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/dash_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:text="Daily Deals"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/dash_change_recycler_style_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_view_list_24"
            android:layout_marginRight="14dp" />

        <ImageView
            android:id="@+id/dash_change_recycler_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_grid_view_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_item_found_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/product_no_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Items Found, Upload item"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textStyle="bold"
                android:visibility="visible"
                android:textColor="@color/orange"/>
            <ProgressBar
                android:id="@+id/retry_progressbar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="visible"
                android:background="@drawable/progress"/>

        </LinearLayout>

        <TextView
            android:id="@+id/retry_get_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETRY AGAIN"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold"
            android:visibility="visible"
            android:textColor="@color/ColorGreen"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/product_progressbar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:visibility="visible"
        android:background="@drawable/progress"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_list_ui_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:layout_marginEnd="12dp"
        android:visibility="visible"/>


    <fragment
        android:id="@+id/news_two_frg"
        android:name="com.lornamobileappsdev.my_marketplace.ui.NewsTwoFragment"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>