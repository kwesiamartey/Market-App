<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.SignInFragment">


    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:drawableStart="@drawable/ic_menu"
        android:drawablePadding="12dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Menu"
        android:textSize="16sp"
        android:textColor="@color/black" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lighter_grey"/>

    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/lighter_grey"
        android:paddingStart="18dp"
        android:drawableStart="@drawable/ic_baseline_settings_24"
        android:drawablePadding="12dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/deep_grey"
        android:text="Settiings"
        android:gravity="start"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:gravity="start"
        android:padding="12dp"
        android:fontFamily="@font/poppins_regular"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_baseline_close_24"
        android:elevation="10dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:text="@string/logout"
        android:textColor="@color/deep_grey"
        android:textSize="14sp" />

</LinearLayout>