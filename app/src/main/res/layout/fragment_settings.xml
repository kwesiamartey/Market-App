<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/backk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="24dp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:drawableTint="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:singleLine="true"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_weight="1">


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:scrollbars="none">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/pAbout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:drawableStart="@drawable/ic_about"
                   android:background="@color/lighter_grey"
                   android:drawablePadding="12dp"
                   android:padding="10dp"
                   android:text="About us"
                   android:textColor="@color/textColor" />
               <TextView
                   android:id="@+id/pChangeAvatar"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:drawableStart="@drawable/ic_baseline_image_24"
                   android:drawablePadding="12dp"
                   android:padding="10dp"
                   android:text="Change my avatar"
                   android:textColor="@color/textColor" />
               <TextView
                   android:id="@+id/pDetails"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/lighter_grey"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:padding="10dp"
                   android:drawableStart="@drawable/ic_details"
                   android:drawablePadding="12dp"
                   android:text="Personal details"
                   android:textColor="@color/textColor" />

               <TextView
                   android:id="@+id/cPassword"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:padding="10dp"
                   android:drawableStart="@drawable/ic_password"
                   android:drawablePadding="12dp"
                   android:text="Change password"
                   android:textColor="@color/textColor" />

               <TextView
                   android:id="@+id/cEmail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/lighter_grey"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:padding="10dp"
                   android:drawableStart="@drawable/ic_email"
                   android:drawablePadding="12dp"
                   android:text="Change email"
                   android:textColor="@color/textColor" />

               <TextView
                   android:id="@+id/dFeedback"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:padding="10dp"
                   android:visibility="gone"
                   android:drawableStart="@drawable/ic_feedback"
                   android:drawablePadding="12dp"
                   android:text="Disable feedback"
                   android:textColor="@color/textColor" />
               <TextView
                   android:id="@+id/dPrivacy"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:padding="10dp"
                   android:text="Privacy"
                   android:drawableStart="@drawable/ic_private_connectivity"
                   android:drawablePadding="12dp"
                   android:textColor="@color/textColor" />
               <TextView
                   android:id="@+id/dPolicy"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:padding="10dp"
                   android:background="@color/lighter_grey"
                   android:text="Policy"
                   android:drawableStart="@drawable/ic_policy"
                   android:drawablePadding="12dp"
                   android:textColor="@color/textColor" />

               <TextView
                   android:id="@+id/dComment"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/lighter_grey"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:visibility="gone"
                   android:padding="10dp"
                   android:drawableStart="@drawable/ic_comments_disabled"
                   android:drawablePadding="12dp"
                   android:text="Disable comment"
                   android:textColor="@color/textColor" />

               <TextView
                   android:id="@+id/deleteMyAccount"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:padding="10dp"
                   android:drawableStart="@drawable/ic_delete_forever"
                   android:drawablePadding="12dp"

                   android:text="Delete my account"
                   android:textColor="@color/textColor" />

               <TextView
                   android:id="@+id/dLogout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/lighter_grey"
                   android:drawableEnd="@drawable/ic_arrow_forward"
                   android:fontFamily="@font/poppins_medium"
                   android:padding="10dp"
                   android:text="Logout"
                   android:textColor="@color/red" />

           </LinearLayout>


       </ScrollView>


   </LinearLayout>

</LinearLayout>