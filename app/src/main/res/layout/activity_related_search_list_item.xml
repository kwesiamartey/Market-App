<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mesg_wrapper"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:padding="5dp"
    android:background="@drawable/semi_curve_shape"
    android:backgroundTint="#eee"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_related_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_regular"
        android:text="Loading"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_related_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/semi_curve_border"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:backgroundTint="#E8DDDC"
        android:text="X"
        android:layout_marginEnd="6dp"
        android:textSize="11sp"
        android:textStyle="bold" />

</LinearLayout>