<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background_color"
    tools:context=".ui.SignInFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="#000"
        android:textSize="24sp"
        android:fontFamily="@font/oswald"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.344" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Sign in to your account"
        android:textColor="@color/deep_grey"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/sgn_email_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:elevation="1dp"
        android:textSize="13sp"
        android:textCursorDrawable="@null"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:hint="email"
        android:textColorHint="@color/deep_grey"
        android:textColor="@color/deep_grey"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="12dp"
        android:background="@drawable/full_curved_corner_button"
        android:backgroundTint="@color/white"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:id="@+id/sgn_password_txt_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/full_curved_corner_button"
        android:backgroundTint="@color/white"
        android:elevation="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sgn_email_txt" >

        <EditText
            android:id="@+id/sgn_password_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/full_curved_corner_button"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:elevation="1dp"
            android:textColorHint="@color/deep_grey"
            android:textColor="@color/deep_grey"
            android:textCursorDrawable="@null"
            android:layout_weight="1"
            android:minHeight="38dp"
            android:textSize="13sp"
            android:drawablePadding="12dp"
            android:inputType="textPassword"
            android:padding="8dp"
            android:hint="password"/>

        <TextView
            android:id="@+id/s_eye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:text="Show"
            android:textColor="@color/white"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="12dp"
        android:text="Forgot your password"
        android:textColor="#393A3A"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sgn_password_txt_wrapper" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:elevation="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="right|center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="Sign in "
            android:fontFamily="@font/oswald"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_signin"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/full_curved_corner_button"
            android:backgroundTint="@color/button_color"
            android:drawableStart="@drawable/ic_baseline_arrow_right_alt_24"
            android:drawableTint="@color/white"
            android:paddingStart="12dp"
            android:paddingTop="0dp"
            android:paddingEnd="12dp"
            android:paddingBottom="0dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Don't have an account? "
        android:textColor="@color/deep_grey"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Create one"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/shopping_cart_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Back home"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:fontFamily="@font/poppins_medium"
        android:drawablePadding="12sp"
        android:drawableStart="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>