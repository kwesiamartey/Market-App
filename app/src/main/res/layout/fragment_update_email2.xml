<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.UpdateEmailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/single_selected_toolnar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Email update"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:drawableTint="@color/black"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_weight = "1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"/>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/avater"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/full_curved_corner_button"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_update"/>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="19sp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"

            android:background="@drawable/full_curved_corner_button"
            android:hint="confirm email"
            android:padding="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/pgr"
                android:visibility="gone"
                android:background="@drawable/progress"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/full_curved_corner_button_with_no_background_color"
            app:backgroundTint="@color/deep_mauve"
            android:textColor="@color/white"
            android:layout_margin="19sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textSize="19sp"
            android:text="Change"/>




    </LinearLayout>

</LinearLayout>